<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/background"
        tools:context="cn.cnu.smartbook.androidUI.SentenceActivity">

    <ImageView
            android:layout_width="700dp"
            android:layout_height="400dp"
            android:background="@drawable/glasses"
            android:id="@+id/glasses"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/laba"
            android:background="@drawable/laba"
            android:layout_alignTop="@+id/glasses"
            android:layout_alignLeft="@+id/glasses"
            android:layout_alignStart="@+id/glasses"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            android:textSize="30sp"
            android:id="@+id/content"
            android:layout_alignBottom="@+id/laba"
            android:layout_toRightOf="@+id/laba"
            android:layout_toEndOf="@+id/laba"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"/>

    <ImageView
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:id="@+id/image"
            android:layout_below="@+id/content"
            android:layout_alignLeft="@+id/content"
            android:layout_alignStart="@+id/content"
            android:layout_marginTop="40dp"/>

    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/goback"
            android:id="@+id/imageView5"
            android:layout_above="@+id/glasses"
            android:layout_alignRight="@+id/glasses"
            android:layout_alignEnd="@+id/glasses"
            android:layout_marginBottom="20dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:background="@drawable/next"
            android:layout_below="@+id/glasses"
            android:layout_alignRight="@+id/glasses"
            android:layout_alignEnd="@+id/glasses"
            android:layout_marginTop="33dp"/>

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/video"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/glasses"
            android:layout_toEndOf="@+id/glasses"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton5"
            android:background="@drawable/audbtn"
            android:layout_above="@+id/imageButton4"
            android:layout_marginBottom="35dp"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignStart="@+id/imageButton4"/>

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/picbtn"
            android:id="@+id/imageButton6"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/imageButton4"
            android:layout_alignLeft="@+id/imageButton4"
            android:layout_alignStart="@+id/imageButton4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="word"
            android:textSize="30sp"
            android:id="@+id/textView"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/glasses"
            android:layout_alignLeft="@+id/glasses"
            android:layout_alignStart="@+id/glasses"
            android:singleLine="false"
            android:textColor="#f4f80c"/>

</RelativeLayout>
